@model WebApplication4.DataDB.Position

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/crud.css" rel="stylesheet" />
<div class="container">
    <div class="row justify-content-center bg-transparent">
        <div class="col-md-4">
            <h4 class="text-center">Edit Position</h4>
            <hr />
            <img src="~/payroll-logo.png" alt="Logo" style="width: 150px; height: 100px; background:#1C1C39; margin-bottom:1em;border-radius:100%;" />
            <form asp-action="Edit" class="bg-transparent">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PositionId" />
                <div class="form-group d-grid gap-2">
                    <label style="text-align:left">Name</label>
                    <input asp-for="Position1" class="form-control" />
                    <span asp-validation-for="Position1" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@model WebApplication4.DataDB.Employee

@{
    ViewData["Title"] = "Create";
}

<link href="~/css/attendanceedit.css" rel="stylesheet" />
<div class="container">
    <div class="row justify-content-center bg-transparent">
        <div class="col-md-4">
            <h4 class="text-center">Add new Employee</h4>
            <hr />
            <img src="~/payroll-logo.png" alt="Logo" style="width: 150px; height: 100px; background:#1C1C39; margin-bottom:1em;border-radius:100%;" />
            <form asp-action="Create" class="bg-transparent">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="EmpId" class="control-label">ID</label>
                    <input asp-for="EmpId" class="form-control bg-transparent border border-dark shadow-none" />
                    <span asp-validation-for="EmpId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Fname" class="control-label">First name</label>
                    <input asp-for="Fname" class="form-control bg-transparent border border-dark shadow-none" />
                    <span asp-validation-for="Fname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mname" class="control-label small-label">Middle Name</label>
                    <input asp-for="Mname" class="form-control bg-transparent border border-dark shadow-none" />
                    <span asp-validation-for="Mname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Lname" class="control-label small-label">Last Name</label>
                    <input asp-for="Lname" class="form-control bg-transparent border border-dark shadow-none" />
                    <span asp-validation-for="Lname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Position" class="control-label small-label">Position</label>
                    <input asp-for="Position" class="form-control bg-transparent border border-dark shadow-none" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Rate" class="control-label small-label">Rate</label>
                    <input asp-for="Rate" class="form-control bg-transparent border border-dark shadow-none" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SssNo" class="control-label small-label">Social Security Number</label>
                    <input asp-for="SssNo" class="form-control bg-transparent border border-dark shadow-none" />
                    <span asp-validation-for="SssNo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PagibigNo" class="control-label small-label">Pag-Ibig Number</label>
                    <input asp-for="PagibigNo" class="form-control bg-transparent border border-dark shadow-none" />
                    <span asp-validation-for="PagibigNo" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>

        </div>
    </div>
</div>



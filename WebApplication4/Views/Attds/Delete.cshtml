@model WebApplication4.DataDB.Attd

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-6">
            <h1 class="text-center">Delete</h1>

            <h3 class="text-center">Are you sure you want to delete this?</h3>

            <div>
                <h4>Attendance</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        Date:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Date)
                    </dd>

                    <dt class="col-sm-3">
                        Employee ID:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.EmpId)
                    </dd>

                    <dt class="col-sm-3">
                        Holiday:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Holiday)
                    </dd>

                    <dt class="col-sm-3">
                        Schedule Time:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.St)
                    </dd>

                    <dt class="col-sm-3">
                        Time Record:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Tr)
                    </dd>

                    <dt class="col-sm-3">
                        Night Differential:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.nd)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center mt-3">
                    <input type="hidden" asp-for="AttdId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <span class="mx-2">|</span>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

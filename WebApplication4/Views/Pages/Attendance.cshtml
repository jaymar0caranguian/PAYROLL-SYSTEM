
@{
    ViewData["title"] = "Attendance";
}

<div class="row">
    <div class="col-lg-3" style="background-color: #1C1C39;">
        <img src="~/payroll-logo.png" width="100%" style="margin-top: -50px" />

        <div class="container-fluid" style="margin-top: -30px" align="center">
            <div class="col-8" align="left">
                <h5><a href="@Url.Action("Dashboard", "Pages")" class="text-decoration-none text-white mt-2"><i class="bi-house"></i> Home</a><br /></h5>
                <h5><a href="@Url.Action("Index","Attds")" class="text-decoration-none text-white mt-2"><i class="bi-person-check"></i> Attendance</a><br /></h5>
                               <h5><a href="@Url.Action("Index", "Employees")" class="text-decoration-none text-white mt-2"><i class="bi-people"></i> Employee List</a><br /></h5>
                <h5><a href="@Url.Action("Payslip", "Pages")" class="text-decoration-none text-white mt-2"><i class="bi-envelope-paper"></i> Payslip</a><br /></h5>
                <h5><a href="@Url.Action("Index", "Report")" class="text-decoration-none text-white mt-2"><i class="bi-file-earmark-text"></i> Reports</a><br /></h5>
                <h5><a href="@Url.Action("Index", "SysAccs")" class="text-decoration-none text-white mt-2"><i class="bi-person"></i> Manage Users</a><br /></h5>
                <br /><br />

                <h5><a href="#" class="text-decoration-none text-white mt-2" data-bs-toggle="modal" data-bs-target="#logout-modal"><i class="bi-box-arrow-left"></i> Logout</a><br /></h5>
            </div>
        </div>
    </div>
    <div class="col-lg-9 bg-light" style="height: 100vh !important">
        <br/><br />

        <div class="container">
            <div class="bg-white p-4 shadow">
                <div class="row">
                    <div class="col-7">
                        <h1>Attendance</h1>
                    </div>

                    <div class="col-5 pt-2 d-inline m-0" align="right">
                        <div class="row gx-2">
                            <div class="col-6">
                                <div class="input-group date w-100" id="datepicker">
                                    <input type="text" class="form-control" id="date" disabled />
                                    <span class="input-group-append">
                                        <span class="input-group-text bg-light d-block">
                                            <i class="bi-calendar"></i>
                                        </span>
                                    </span>
                                </div>
                            </div>

                            <div class="col-6">
                                <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#new-attendance-modal"><i class="bi-plus"></i>+Add Attendance</button>
                            </div>
                        </div>
                    </div>
                </div>
                <br />

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <td>Employee ID</td>
                            <td>Holiday</td>
                            <td>Schedule Time</td>
                            <td>Time Record</td>
                            <td>Night Differential</td>
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>123456</td>
                            <td><i class="bi-x-lg"></i></td>
                            <td>8:30 &mdash; 5:30</td>
                            <td>8:26 &mdash; 5:23</td>
                            <td>N/A</td>
                            <td>
                                <button class="btn btn-primary" style="margin-right: 6px;" data-bs-toggle="modal" data-bs-target="#update-attendance-modal"><i class="bi-pencil-square"></i></button>
                                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete-modal"><i class="bi-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br/>

                <div class="row">
                    <div class="col-6">
                        <p>Showing 1 to 1 of 1 entries</p>
                    </div>

                    <div class="col-6" align="right">
                        <a href="#" class="text-decoration-none">Previous</a>
                        <a href="#" class="btn btn-secondary mx-2">1</a>
                        <a href="#" class="text-decoration-none">Next</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="logout-modal" tabindex="-1" aria-labelledby="logout-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="logout-modal-label">Logout</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to logout?
            </div>
            <div class="modal-footer">
                <a href="/" class="btn btn-danger">Logout</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="new-attendance-modal" tabindex="-1" aria-labelledby="new-attendance-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <h5 class="modal-title" id="new-attendance-label">New Attendance</h5>

                <div class="form-group">
                    <label for="employee_id" class="form-label mt-2">Employee ID</label>
                    <input type="number" class="form-control" id="employee_id" placeholder="Employee ID" />

                    <label for="sched_time" class="form-label mt-2">Schedule Time</label>
                    <input type="text" class="form-control" id="sched_time" placeholder="Schedule Time" />

                    <label for="time_record" class="form-label mt-2">Time Record</label>
                    <input type="text" class="form-control" id="time_record" placeholder="Time Record" />

                    <label for="night_diff" class="form-label mt-2">Night Differential</label>
                    <input type="text" class="form-control" id="night_diff" placeholder="Night Differential" />

                    <div class="mt-2">
                        <input class="form-check-input" type="checkbox" value="" id="holiday" />
                        <label class="form-check-label" for="holiday">Holiday</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="update-attendance-modal" tabindex="-1" aria-labelledby="update-attendance-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <h5 class="modal-title" id="update-attendance-label">Update Attendance Details</h5>

                <div class="form-group">
                    <label for="employee_id" class="form-label mt-2">Employee ID</label>
                    <input type="number" class="form-control" id="employee_id" placeholder="Employee ID" disabled value="123456" />

                    <label for="sched_time" class="form-label mt-2">Schedule Time</label>
                    <input type="text" class="form-control" id="sched_time" placeholder="Schedule Time" value="8:30 — 5:30" />

                    <label for="time_record" class="form-label mt-2">Time Record</label>
                    <input type="text" class="form-control" id="time_record" placeholder="Time Record" value="8:26 — 5:23" />

                    <label for="night_diff" class="form-label mt-2">Night Differential</label>
                    <input type="text" class="form-control" id="night_diff" placeholder="Night Differential" value="N/A" />

                    <div class="mt-2">
                        <input class="form-check-input" type="checkbox" value="" id="holiday" />
                        <label class="form-check-label" for="holiday">Holiday</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Update</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="delete-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete-modal-label">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure to delete this attendance?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script defer>
    window.onload = () => {
        $(function () {
            $('#date').datepicker();
        });

        function getTodayDate() {
            const d = new Date();
            const f = n => (n < 10 ? '0' : '') + n;
            return [d.getFullYear(), f(d.getMonth() + 1), f(d.getDate())].join('-');
        }

        var todayDate = getTodayDate();
        document.getElementById("date").value = todayDate;
    };
</script>
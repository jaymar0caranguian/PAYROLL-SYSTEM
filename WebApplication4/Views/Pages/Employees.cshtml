
@{
    ViewData["title"] = "Employee List";
}

<div class="row">
    <div class="col-lg-3" style="background-color: #1C1C39;">
        <img src="~/payroll-logo.png" width="100%" style="margin-top: -50px" />

        <div class="container-fluid" style="margin-top: -30px" align="center">
            <div class="col-8" align="left">
                <h5><a href="@Url.Action("Dashboard", "Pages")" class="text-decoration-none text-white mt-2"><i class="bi-house"></i> Home</a><br /></h5>
                <h5><a href="@Url.Action("Index","Attds")" class="text-decoration-none text-white mt-2"><i class="bi-person-check"></i> Attendance</a><br /></h5>
                <h5><a href="@Url.Action("Index", "Employees")" class="text-decoration-none text-white mt-2"><i class="bi-people"></i> Employee List</a><br /></h5>
                <h5><a href="@Url.Action("Payslip", "Pages")" class="text-decoration-none text-white mt-2"><i class="bi-envelope-paper"></i> Payslip</a><br /></h5>
                <h5><a href="@Url.Action("Index", "Report")" class="text-decoration-none text-white mt-2"><i class="bi-file-earmark-text"></i> Reports</a><br /></h5>
                <h5><a href="@Url.Action("Index", "SysAccs")" class="text-decoration-none text-white mt-2"><i class="bi-person"></i> Manage Users</a><br /></h5>
                <br /><br />

                <h5><a href="#" class="text-decoration-none text-white mt-2" data-bs-toggle="modal" data-bs-target="#logout-modal"><i class="bi-box-arrow-left"></i> Logout</a><br /></h5>
            </div>
        </div>
    </div>

    <div class="col-lg-9 bg-light" style="height: 100vh !important">
        <br /><br />

        <div class="container">
            <div class="bg-white p-4 shadow">
                <div class="row">
                    <div class="col-8">
                        <h1>Employee List</h1>
                    </div>

                    <div class="col-4 pt-2" align="right">
                        <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#new-employee-modal"><i class="bi-plus"></i> Add Employee</button>
                    </div>
                </div>
                <br />

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <td>Employee ID</td>
                            <td>Last Name</td>
                            <td>First Name</td>
                            <td>Middle Name</td>
                            <td>Position</td>
                            <td>Rate</td>
                            <td>SSS No.</td>
                            <td>PAG-IBIG No.</td>
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>123456</td>
                            <td>Dela Cruz</td>
                            <td>Juan</td>
                            <td>Garcia</td>
                            <td>Staff/Crew</td>
                            <td>Php 610</td>
                            <td>xxxxxxxxxxxx</td>
                            <td>xxxxxxxxxxxx</td>
                            <td>
                                <button class="btn btn-primary" style="margin-right: 6px;" data-bs-toggle="modal" data-bs-target="#update-employee-modal"><i class="bi-pencil-square"></i></button>
                                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete-modal"><i class="bi-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br />

                <div class="row">
                    <div class="col-6">
                        <p>Showing 1 to 1 of 1 entries</p>
                    </div>

                    <div class="col-6" align="right">
                        <a href="#" class="text-decoration-none">Previous</a>
                        <a href="#" class="btn btn-secondary mx-2">1</a>
                        <a href="#" class="text-decoration-none">Next</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="logout-modal" tabindex="-1" aria-labelledby="logout-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="logout-modal-label">Logout</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to logout?
            </div>
            <div class="modal-footer">
                <a href="/" class="btn btn-danger">Logout</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="new-employee-modal" tabindex="-1" aria-labelledby="new-employee-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <h5 class="modal-title" id="new-employee-label">New Employee</h5>

                <div class="form-group">
                    <label for="employee_id" class="form-label mt-2">Employee ID</label>
                    <input type="number" class="form-control" id="employee_id" placeholder="Employee ID" />

                    <label for="fname" class="form-label mt-2">First Name</label>
                    <input type="text" class="form-control" id="fname" placeholder="First Name" />

                    <label for="mname" class="form-label mt-2">Middle Name</label>
                    <input type="text" class="form-control" id="mname" placeholder="Middle Name" />

                    <label for="lname" class="form-label mt-2">Last Name</label>
                    <input type="text" class="form-control" id="lname" placeholder="Last Name" />

                    <label for="position" class="form-label mt-2">Position</label>
                    <select class="form-control" id="position">
                        <option>Manager</option>
                        <option>Staff/Crew</option>
                    </select>

                    <label for="rate" class="form-label mt-2">Rate</label>
                    <input type="number" class="form-control" id="rate" placeholder="Rate" />

                    <label for="sss" class="form-label mt-2">SSS No.</label>
                    <input type="text" class="form-control" id="sss" placeholder="SSS No." />

                    <label for="pagibig" class="form-label mt-2">PAG-IBIG No.</label>
                    <input type="text" class="form-control" id="pagibig" placeholder="PAG-IBIG No." />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="update-employee-modal" tabindex="-1" aria-labelledby="update-employee-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <h5 class="modal-title" id="update-employee-label">Update Employee Details</h5>

                <div class="form-group">
                    <label for="employee_id" class="form-label mt-2">Employee ID</label>
                    <input type="number" class="form-control" id="employee_id" placeholder="Employee ID" disabled value="123456" />

                    <label for="fname" class="form-label mt-2">First Name</label>
                    <input type="text" class="form-control" id="fname" placeholder="First Name" value="Juan" />

                    <label for="mname" class="form-label mt-2">Middle Name</label>
                    <input type="text" class="form-control" id="mname" placeholder="Middle Name" value="Garcia" />

                    <label for="lname" class="form-label mt-2">Last Name</label>
                    <input type="text" class="form-control" id="lname" placeholder="Last Name" value="Dela Cruz" />

                    <label for="position" class="form-label mt-2">Position</label>
                    <select class="form-control" id="position">
                        <option>Staff/Crew</option>
                        <option>Manager</option>
                    </select>

                    <label for="rate" class="form-label mt-2">Rate</label>
                    <input type="number" class="form-control" id="rate" placeholder="Rate" value="610" />

                    <label for="sss" class="form-label mt-2">SSS No.</label>
                    <input type="text" class="form-control" id="sss" placeholder="SSS No." value="xxxxxxxxxxxx" />

                    <label for="pagibig" class="form-label mt-2">PAG-IBIG No.</label>
                    <input type="text" class="form-control" id="pagibig" placeholder="PAG-IBIG No." value="xxxxxxxxxxxx" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Update</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="delete-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete-modal-label">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure to delete this employee?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>